<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shapesbackground"
        tools:context=".QRGenerator">

    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_margin="4dp"
            android:id="@+id/iv_barcode"
            android:background="@drawable/qr_background"
            android:layout_marginEnd="111dp" android:layout_marginRight="111dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="107dp" android:layout_marginStart="107dp" android:layout_marginBottom="431dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="427dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:text="Scan Me!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_orange_light"
            android:id="@+id/textView3" android:layout_marginEnd="176dp" android:layout_marginRight="176dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="177dp" android:layout_marginStart="177dp" android:layout_marginTop="171dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toTopOf="@+id/iv_barcode" app:fontFamily="@font/northen"
            android:textSize="30sp"/>
</android.support.constraint.ConstraintLayout>