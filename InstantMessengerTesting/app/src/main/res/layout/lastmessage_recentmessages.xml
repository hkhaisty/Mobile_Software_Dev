<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="120dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="64dp"
            android:layout_height="64dp" app:srcCompat="@drawable/cmaillogo"
            android:id="@+id/profileimagedisplay_imageview"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="username"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usernamedisplay_textview" app:layout_constraintStart_toEndOf="@+id/profileimagedisplay_imageview"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/lastmessagedisplay_textview"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_chainStyle="packed"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="last message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lastmessagedisplay_textview" app:layout_constraintStart_toEndOf="@+id/profileimagedisplay_imageview"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usernamedisplay_textview"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginTop="8dp" android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>