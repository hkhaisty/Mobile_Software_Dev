<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
>

    <TextView
            android:text="Username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/usernameNewMessage_textview"
            app:layout_constraintStart_toEndOf="@+id/profilepictureNewMessage_imageview"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/profilepictureNewMessage_imageview"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/profilepictureNewMessage_imageview"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
    />

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/profilepictureNewMessage_imageview"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="2dp"
    />
</android.support.constraint.ConstraintLayout>